<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCardInfoBackground">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/card_info_text_size"
            android:text="@string/card_info_owner_label"/>

        <TextView
            android:id="@+id/owner_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/card_info_text_size"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_info_margin_top"
        android:textSize="@dimen/card_info_text_size"
        android:text="@string/card_ingredient_recipe_label"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.anastasia.potions.view.CardView
            android:id="@+id/ingredient_info_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.anastasia.potions.view.CardView
            android:id="@+id/recipe_info_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_info_margin_top"
        android:textSize="@dimen/card_info_text_size"
        android:text="@string/card_mixed_recipes_label"/>

    <org.lucasr.twowayview.TwoWayView
        android:id="@+id/recipe_needs_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />
</LinearLayout>