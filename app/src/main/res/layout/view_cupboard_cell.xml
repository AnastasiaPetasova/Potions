<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:background="@drawable/background_selector_object"
    android:layout_margin="@dimen/recipe_picture_padding">

    <com.anastasia.potions.view.CardView
        android:id="@+id/ingredient_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.8"/>

    <TextView
        android:id="@+id/ingredient_count_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
    />
</LinearLayout>